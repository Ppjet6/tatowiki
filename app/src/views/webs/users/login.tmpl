<% template annexe_content() %>
<div class="module">
    <h2><% gt "Note:" %></h2>
    <p>
        <% gt "For the moment there's no automatic 'password forgotten' mechanism, instead send an email to the administrators" %>
    </p>

</div>
<% end template %>





<% end view %>
<% end skin %>


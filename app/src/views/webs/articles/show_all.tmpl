<% c++ #include "contents/Articles.h" %>
<% skin %>
<% view articles_show_all uses contents::articles::ShowAll extends master %>
<% template title() %><% gt "TODO TITLE" %><% end template %>


<% template main_content() %> 
<div class="module">
    <h1><% gt "All articles" %></h1>
    <% foreach article in articles %>
    <ul>
        <% item %>
        <li>    
            <!-- TODO use < url %> instead -->
            <a href="/articles/show/<%= article.slug | urlencode %>">
                <%= article.title  %>
            </a>
        </li>
        <% end %>
    </ul>
    <% end foreach %>
</div>
<% end template %>


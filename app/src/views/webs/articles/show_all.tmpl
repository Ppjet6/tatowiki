    <h2><%gt "Actions" %></h2>
    
    <ul class="annexeMenu">
        <li>
            <!-- TODO replace by application root !-->
            <a href="/">
                <%gt "Go back to main page" %>
            </a>
        </li>
    </ul>
</div>

<% end template %>

<% end view %>
